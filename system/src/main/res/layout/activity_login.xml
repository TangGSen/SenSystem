<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/login_root_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/bg_login"
    >


    <LinearLayout
        android:id="@+id/login_layot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_user_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/frgment_login_24dp"
            android:layout_marginRight="@dimen/frgment_login_24dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="礼券账号"
                android:lineSpacingExtra="2dp"
                android:lines="1"
                android:textColor="@color/tab_bgcolor"
                android:textColorHint="@color/tab_bgcolor"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/login_password_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/frgment_login_24dp"
            android:layout_marginRight="@dimen/frgment_login_24dp"
            android:layout_marginTop="@dimen/frgment_login_4dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/frag_login_password_hint"
                android:inputType="textPassword"
                android:lines="1"
                android:textColor="@color/tab_bgcolor"
                android:textColorHint="@color/tab_bgcolor"
                android:textSize="14sp"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/frgment_login_24dp"
            android:layout_marginRight="@dimen/frgment_login_24dp"
            android:layout_marginTop="@dimen/common_8dp"
            android:background="@drawable/selected_btn_submit"
            android:text="@string/loginString"
            android:textColor="@drawable/selected_submit_text_color"
            android:textSize="14sp"/>
    </LinearLayout>


</RelativeLayout>